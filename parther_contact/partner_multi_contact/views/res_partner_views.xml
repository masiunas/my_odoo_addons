<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="partner_contact_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="partner_contact" string="Contacts">
                    <field name="partner_contact_ids"
                           context="{'default_partner_id': active_id, 'partner_readonly': True}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="contact_type" required="1"/>
                            <field name="value" required="1"/>
                            <field name="note"/>
                            <field name="contact_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
